<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="All Test Suite" parallel="tests">
    <listeners>
        <listener class-name="Academy.Listeners"/>
    </listeners>
    <test verbose="2" preserve-order="true" name="Validating user login">
        <classes>
            <class name="Academy.HomePage">
                <methods><include name="basePageNavigation"/></methods>
            </class>
        </classes>
    </test>
    <test verbose="2" preserve-order="true" name="Validating Navigation bar in the page">
        <classes>
            <class name="Academy.ValidateNavigationBar">
                <methods><include name="basePageNavigation"/></methods>
            </class>
        </classes>
    </test>
    <test verbose="2" preserve-order="true" name="Validating title in the page">
        <classes>
            <class name="Academy.ValidateTitle">
                <methods><include name="basePageNavigation"/></methods>
            </class>
        </classes>

    </test>
</suite>



